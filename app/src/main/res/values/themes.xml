<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsReader" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
    </style>

    <style name="Theme.NewsReader" parent="Base.Theme.NewsReader" />

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/green</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/black</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NavigationTheme" parent="Theme.AppCompat.Light">
        <item name="backgroundColor">@color/blue</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">#42221f1f</item>
    </style>

    <style name="SCBSwitchText" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextHeading" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="TextHeadingItem" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="EditSearch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/search_border</item>
        <item name="android:drawableTint">@color/blue</item>
        <item name="android:textColorHint">@color/grey_normal</item>

    </style>
</resources>