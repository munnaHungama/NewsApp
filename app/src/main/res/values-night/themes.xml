    <style name="TextHeadingItem" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="EditSearch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="android:background">@drawable/search_border_white</item>
        <item name="android:drawableTint">@color/white</item>
